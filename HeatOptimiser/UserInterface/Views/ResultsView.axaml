<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:UserInterface.ViewModels.ResultsViewModel"
             xmlns:lvc="clr-namespace:LiveCharts.Avalonia;assembly=LiveCharts.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="UserInterface.Views.ResultsView">

    <Grid>
        <lvc:CartesianChart Width="400" Height="300" Series="{Binding SeriesCollection}">
            <lvc:CartesianChart.Series>
                <lvc:LineSeries Values="{Binding Results.EnergySavings}"
                                Title="Energy Savings" />
            </lvc:CartesianChart.Series>
        </lvc:CartesianChart>
    </Grid>
</UserControl>
